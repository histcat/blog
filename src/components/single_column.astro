---
import { BASIC_INFO } from "../consts";
import { Icon } from 'astro-icon/components'
function is_home() {
    return Astro.url.pathname === '/';
}

function is_current(url : string)
{
    return Astro.url.pathname === url;
}

---


<div class="single-column-drawer-container" ref="drawer"
     v-bind:class="{ 'single-column-drawer-container-active': isDrawerOpen }">
    <div class="drawer-content">
        <div class="drawer-menu">
            <a class={"a-block drawer-menu-item" + (is_home() ? ' active' : '')} href={BASIC_INFO.SITE_URL}>
                首页
            </a>
            <a class={"a-block drawer-menu-item" + (is_current('archives') ? ' active' : '')} href={BASIC_INFO.SITE_URL + "archives"}>
                归档
            </a>
            <!-- 还缺点东西 -->
            <a class="a-block drawer-menu-item" href={BASIC_INFO.SITE_URL + "rss.xml"}>
                RSS
            </a>
        </div>
    </div>
</div>
<transition name="fade">
    <div v-bind:class="{ 'single-column-drawer-mask': mounted }" v-if="isDrawerOpen" v-on:click="toggleDrawer"></div>
</transition>
<nav ref="navBar" class="navbar sticky-top navbar-light single-column-nav-container">
    <div ref="navBackground" class="nav-background"></div>
    <div class="container container-narrow nav-content">
        <button id="nav_dropdown_btn" class="nav-dropdown-toggle" type="button" v-on:click="toggleDrawer">
            <i class="material-icons">
                <Icon name="ic:round-menu" />
            </i>
        </button>
        <a ref="navTitle" class="navbar-brand" href={BASIC_INFO.SITE_URL}>
            {BASIC_INFO.SITE_TITLE}
        </a>
    </div>
</nav>
<div class="single-column-header-container" ref="pageHead"
     v-bind:style="{ transform: 'translateZ(0px) translateY('+.3*scrollY+'px)', opacity: 1-navOpacity }">
    <a href={BASIC_INFO.SITE_URL}>
        <div class="single-column-header-title">{BASIC_INFO.SITE_TITLE}</div>
        <div class="single-column-header-subtitle">{BASIC_INFO.SITE_DESC}</div>
    </a>
</div>

<style>
    [data-icon] {
    font-size: 24px !important;
}
</style>